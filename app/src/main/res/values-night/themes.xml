<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Dark Theme -->
    <style name="Base.Theme.TaskMaster" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/purple_primary</item>
        <item name="colorSecondaryVariant">@color/purple_primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="backgroundColor">@color/background_primary</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="surfaceColor">@color/surface_color</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Text Colors -->
        <item name="textPrimary">@color/text_primary</item>
        <item name="textSecondary">@color/text_secondary</item>
        <item name="textTertiary">@color/text_tertiary</item>

        <!-- Icon Colors -->
        <item name="iconTint">@color/icon_tint</item>
        <item name="iconTintPrimary">@color/icon_tint_primary</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>

        <!-- Window Background -->
        <item name="android:windowBackground">@color/background_primary</item>

        <!-- Ripple Effect -->
        <item name="android:colorControlHighlight">@color/ripple_color</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <style name="Theme.TaskMaster" parent="Base.Theme.TaskMaster" />

    <style name="Theme.TaskMaster.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Tab Text Appearance untuk Dark Mode -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

</resources>